# MASSGOO Content Calendar System Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Fal.ai Configuration
FAL_AI_KEY=your_fal_ai_key_here

# Google Analytics 4
GA4_MEASUREMENT_ID=your_ga4_measurement_id_here
GA4_API_SECRET=your_ga4_api_secret_here

# Social Media APIs
INSTAGRAM_ACCESS_TOKEN=your_instagram_token_here
FACEBOOK_ACCESS_TOKEN=your_facebook_token_here
YOUTUBE_API_KEY=your_youtube_api_key_here
TIKTOK_ACCESS_TOKEN=your_tiktok_token_here

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM_ADDRESS=marketing@massgoo.com
EMAIL_FROM_NAME=MASSGOO Marketing

# Application Settings
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=MASSGOO Content Calendar
NODE_ENV=development

# Feature Flags
ENABLE_AI_GENERATION=true
ENABLE_AUTO_PUBLISH=false
ENABLE_ANALYTICS=true

# Rate Limiting
AI_RATE_LIMIT_PER_HOUR=100
PUBLISH_RATE_LIMIT_PER_DAY=50

# Database Connection (if not using Supabase)
# DATABASE_URL=postgresql://user:password@localhost:5432/content_calendar

# Redis Cache (Optional)
# REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn_here
# VERCEL_ANALYTICS_ID=your_vercel_analytics_id_here
