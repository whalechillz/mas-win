            document.getElementById('step3').classList.remove('active');
            document.getElementById('result').classList.add('active');
            
            // ìë™ìœ¼ë¡œ ë¹„ê±°ë¦¬ ë¹„êµ ì„¹ì…˜ìœ¼ë¡œ ìŠ¤í¬ë¡¤í•˜ê³  ì• ë‹ˆë©”ì´ì…˜ ì‹¤í–‰
            setTimeout(() => {
                const comparisonSection = document.querySelector('#distanceComparison').closest('section');
                if (comparisonSection) {
                    comparisonSection.scrollIntoView({ behavior: 'smooth' });
                    setTimeout(() => {
                        showDistanceComparison(quizData.distance);
                    }, 1000);
                }
            }, 500);
    // ì˜ˆìƒ ë¹„ê±°ë¦¬ ì• ë‹ˆë©”ì´ì…˜
    setTimeout(() => {
        const expectedDistEl = document.getElementById('expectedDistance');
        if (expectedDistEl) {
            const start = quizData.distance;
            const end = quizData.distance + 25;
            let current = start;
            const duration = 2000; // 2ì´ˆ
            const increment = 25 / (duration / 16);
            
            const timer = setInterval(() => {
                current += increment;
                if (current >= end) {
                    current = end;
                    clearInterval(timer);
                }
                expectedDistEl.textContent = Math.floor(current) + 'm';
            }, 16);
        }
    }, 500);
        }

        // ë¹„ê±°ë¦¬ ë¹„êµ ì• ë‹ˆë©”ì´ì…˜
        function showDistanceComparison(autoDistance) {
            const userDistance = autoDistance || parseInt(document.getElementById('userDistance').value);
            if (!userDistance) {
                alert('ë¹„ê±°ë¦¬ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }
            
            // ì…ë ¥ê°’ ìë™ ì„¤ì •
            if (autoDistance) {
                document.getElementById('userDistance').value = autoDistance;
            }
            
            const masDistance = userDistance + 25;
            const maxDistance = Math.max(masDistance, 300);
            
            // ë¹„ê±°ë¦¬ ì´ˆê¸° í‘œì‹œ
            document.getElementById('normalDistance').textContent = userDistance + 'm';
            document.getElementById('masDistance').textContent = userDistance + 'm'; // ì´ˆê¸°ê°’ì€ ê°™ê²Œ ì„¤ì •
            
            // ë¹„êµ ì˜ì—­ í‘œì‹œ
            document.getElementById('distanceComparison').classList.remove('hidden');
            
            // íƒ€ì‚¬ ë“œë¼ì´ë²„ ë¨¼ì € ì• ë‹ˆë©”ì´ì…˜
            setTimeout(() => {
                const normalBall = document.getElementById('normalBall');
                normalBall.style.setProperty('--distance', `${(userDistance / maxDistance) * 90}%`);
                normalBall.classList.add('ball-animate');
                
                // 1ì´ˆ í›„ MAS ë“œë¼ì´ë²„ ì• ë‹ˆë©”ì´ì…˜
                setTimeout(() => {
                    const masBall = document.getElementById('masBall');
                    masBall.style.setProperty('--distance', `${(masDistance / maxDistance) * 90}%`);
                    masBall.classList.add('ball-animate');
                    
                    // MAS ë¹„ê±°ë¦¬ ìˆ«ì ì• ë‹ˆë©”ì´ì…˜
                    animateMasDistance(userDistance, masDistance);
                    
                    // ì¦ê°€ëŸ‰ ìˆ«ì ì• ë‹ˆë©”ì´ì…˜
                    setTimeout(() => {
                        animateDistanceIncrease();
                    }, 1000);
                }, 1000);
            }, 100);
        }
        
        // MAS ë¹„ê±°ë¦¬ ìˆ«ì ì• ë‹ˆë©”ì´ì…˜
        function animateMasDistance(start, end) {
            const element = document.getElementById('masDistance');
            if (!element) return;
            
            let current = start;
            const duration = 1500; // 1.5ì´ˆ
            const increment = (end - start) / (duration / 16);
            
            const timer = setInterval(() => {
                current += increment;
                if (current >= end) {
                    current = end;
                    clearInterval(timer);
                }
                element.textContent = Math.floor(current) + 'm';
            }, 16);
        }
        
        // ê±°ë¦¬ ì¦ê°€ ìˆ«ì ì• ë‹ˆë©”ì´ì…˜
        function animateDistanceIncrease() {
            const element = document.getElementById('distanceIncreaseNumber');
            if (!element) return;
            
            let current = 0;
            const target = 25;
            const duration = 2000;
            const increment = target / (duration / 16);
            
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                element.textContent = `+${Math.floor(current)}`;
            }, 16);
        }

        // FAQ í† ê¸€
        function toggleFAQ(id) {
            const content = document.getElementById(`faq-content-${id}`);
            const icon = document.getElementById(`faq-icon-${id}`);
            
            content.classList.toggle('hidden');
            icon.classList.toggle('rotate-180');
        }

        // íŒì—…
        function showPopup() {
            document.getElementById('popup').classList.add('show');
        }

        function hidePopup() {
            document.getElementById('popup').classList.remove('show');
        }

        // ëª¨ë‹¬
        function showBookingModal(clubName = '') {
            document.getElementById('bookingModal').classList.add('show');
            if (clubName) {
                document.querySelector('#bookingForm select[name="club"]').value = clubName;
            }
        }

        function showContactModal() {
            document.getElementById('contactModal').classList.add('show');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('show');
        }

        // í¼ ì œì¶œ ì²˜ë¦¬
        document.getElementById('bookingForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // ë²„íŠ¼ ìƒíƒœ ë³€ê²½
            const submitButton = e.target.querySelector('button[type="submit"]');
            const originalText = submitButton.innerHTML;
            submitButton.innerHTML = '<span class="loading"></span> ì²˜ë¦¬ì¤‘...';
            submitButton.disabled = true;
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                // Supabaseì— ì €ì¥
                if (supabase) {
                    // 1. ê¸°ë³¸ ì˜ˆì•½ ì •ë³´ ì €ì¥ (í€´ì¦ˆ ë°ì´í„° í¬í•¨)
                    const { data: bookingResult, error: bookingError } = await supabase
                        .from('bookings')
                        .insert([{
                            name: data.name,
                            phone: data.phone,
                            date: data.date,
                            time: data.time,
                            club: data.club,
                            // í€´ì¦ˆ ë°ì´í„° ì¶”ê°€
                            swing_style: quizData.style || null,
                            priority: quizData.priority || null,  // Q2 ë‹µë³€ ì €ì¥
                            current_distance: quizData.distance || null,
                            recommended_flex: quizData.recommendedFlex || null,
                            expected_distance: quizData.expectedDistance || null,
                            expected_distance: quizData.expectedDistance || null
                        }])
                        .select();
                    
                    if (bookingError) throw bookingError;
                    
                    // 2. í€´ì¦ˆ ê²°ê³¼ ë³„ë„ ì €ì¥ (ì„ íƒì‚¬í•­)
                    if (quizData.distance > 0) {
                        const { error: quizError } = await supabase
                            .from('quiz_results')
                            .insert([{
                                style: quizData.style,
                                priority: quizData.priority,
                                current_distance: quizData.distance,
                                recommended_prod: quizData.recommendedFlex,
                                ip_address: bookingResult[0].id.toString(), // booking IDë¥¼ ì°¸ì¡°ë¡œ ì‚¬ìš©
                                user_agent: 'booking'
                            }]);
                        
                        if (quizError) console.error('í€´ì¦ˆ ê²°ê³¼ ì €ì¥ ì˜¤ë¥˜:', quizError);
                    }
                    
                    if (bookingError) throw bookingError;
                    
                    // Slack ì•Œë¦¼ì„ ì„œë²„ APIë¥¼ í†µí•´ ì „ì†¡
                    try {
                        const slackResponse = await fetch('/api/slack/notify', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                type: 'booking',
                                data: {
                                    name: data.name,
                                    phone: data.phone,
                                    date: data.date,
                                    time: data.time,
                                    club: data.club,
                                    // í€´ì¦ˆ ë°ì´í„° ì¶”ê°€
                                    swing_style: quizData.styleText || null,
                                    priority: quizData.priorityText || null,
                                    current_distance: quizData.distance || null,
                                    recommended_flex: quizData.recommendedFlex || null,
                                    expected_distance: quizData.expectedDistance || null
                                }
                            })
                        });
                        
                        if (!slackResponse.ok) {
                            console.error('Slack ì•Œë¦¼ ì‹¤íŒ¨:', await slackResponse.text());
                        }
                    } catch (slackError) {
                        console.error('Slack ì•Œë¦¼ ì—ëŸ¬:', slackError);
                    }
                } else {
                    // Supabaseê°€ ì„¤ì •ë˜ì§€ ì•Šì€ ê²½ìš° ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥
                    const bookings = JSON.parse(localStorage.getItem('bookings') || '[]');
                    bookings.push({
                        ...data,
                        created_at: new Date().toISOString()
                    });
                    localStorage.setItem('bookings', JSON.stringify(bookings));
                    console.log('ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥ë¨:', bookings);
                }
                
                alert('ì˜ˆì•½ì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤. ê³§ ì—°ë½ë“œë¦¬ê² ìŠµë‹ˆë‹¤.');
                closeModal('bookingModal');
                e.target.reset();
            } catch (error) {
                console.error('Error:', error);
                alert('ì˜ˆì•½ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ì „í™”ë¡œ ë¬¸ì˜í•´ì£¼ì„¸ìš”.');
            } finally {
                // ë²„íŠ¼ ì›ìƒ ë³µêµ¬
                submitButton.innerHTML = originalText;
                submitButton.disabled = false;
            }
        });

        document.getElementById('contactForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // ë²„íŠ¼ ìƒíƒœ ë³€ê²½
            const submitButton = e.target.querySelector('button[type="submit"]');
            const originalText = submitButton.innerHTML;
            submitButton.innerHTML = '<span class="loading"></span> ì²˜ë¦¬ì¤‘...';
            submitButton.disabled = true;
            
            const formData = new FormData(e.target);
            const callTimes = formData.getAll('callTime');
            
            const data = {
                name: formData.get('name'),
                phone: formData.get('phone'),
                call_times: callTimes.join(', ')
            };
            
            try {
                // Supabaseì— ì €ì¥
                if (supabase) {
                    // 1. ê¸°ë³¸ ë¬¸ì˜ ì •ë³´ ì €ì¥ (í€´ì¦ˆ ë°ì´í„° í¬í•¨)
                    const { data: contactResult, error } = await supabase
                        .from('contacts')
                        .insert([{
                            name: data.name,
                            phone: data.phone,
                            call_times: data.call_times,
                            // í€´ì¦ˆ ë°ì´í„° ì¶”ê°€
                            swing_style: quizData.style || null,
                            priority: quizData.priority || null,  // Q2 ë‹µë³€ ì €ì¥
                            current_distance: quizData.distance || null,
                            recommended_flex: quizData.recommendedFlex || null
                        }])
                        .select();
                    
                    if (error) throw error;
                    
                    // Slack ì•Œë¦¼ì„ ì„œë²„ APIë¥¼ í†µí•´ ì „ì†¡
                    try {
                        const slackResponse = await fetch('/api/slack/notify', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                type: 'contact',
                                data: {
                                    name: data.name,
                                    phone: data.phone,
                                    call_times: data.call_times,
                                    // í€´ì¦ˆ ë°ì´í„° ì¶”ê°€
                                    swing_style: quizData.styleText || null,
                                    priority: quizData.priorityText || null,
                                    current_distance: quizData.distance || null,
                                    recommended_flex: quizData.recommendedFlex || null,
                                    expected_distance: quizData.expectedDistance || null
                                }
                            })
                        });
                        
                        if (!slackResponse.ok) {
                            console.error('Slack ì•Œë¦¼ ì‹¤íŒ¨:', await slackResponse.text());
                        }
                    } catch (slackError) {
                        console.error('Slack ì•Œë¦¼ ì—ëŸ¬:', slackError);
                    }
                } else {
                    // Supabaseê°€ ì„¤ì •ë˜ì§€ ì•Šì€ ê²½ìš° ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥
                    const contacts = JSON.parse(localStorage.getItem('contacts') || '[]');
                    contacts.push({
                        ...data,
                        created_at: new Date().toISOString()
                    });
                    localStorage.setItem('contacts', JSON.stringify(contacts));
                    console.log('ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥ë¨:', contacts);
                }
                
                alert('ë¬¸ì˜ê°€ ì ‘ìˆ˜ë˜ì—ˆìŠµë‹ˆë‹¤. ì„ íƒí•˜ì‹  ì‹œê°„ëŒ€ì— ì—°ë½ë“œë¦¬ê² ìŠµë‹ˆë‹¤.');
                closeModal('contactModal');
                e.target.reset();
            } catch (error) {
                console.error('Error:', error);
                alert('ë¬¸ì˜ ì ‘ìˆ˜ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ì „í™”ë¡œ ë¬¸ì˜í•´ì£¼ì„¸ìš”.');
            } finally {
                // ë²„íŠ¼ ì›ìƒ ë³µêµ¬
                submitButton.innerHTML = originalText;
                submitButton.disabled = false;
            }
        });

        // ìŠ¤í¬ë¡¤ ì• ë‹ˆë©”ì´ì…˜
        document.addEventListener('DOMContentLoaded', function() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                    }
                });
            }, { threshold: 0.1 });
            
            const scrollElements = document.querySelectorAll('.scroll-reveal');
            scrollElements.forEach(element => {
                observer.observe(element);
            });

            // 3ì´ˆ í›„ íŒì—… ìë™ í‘œì‹œ
            setTimeout(showPopup, 3000);
            
            // ìºëŸ¬ì…€ ìë™ ì¬ìƒ ì‹œì‘
            if (typeof startAutoSlide === 'function') {
                startAutoSlide();
            }
        });
        
        // ì‚¬ì€í’ˆ ìºëŸ¬ì…€
        let currentSlide = 0;
        const slides = 3;
        let autoSlideInterval;
        
        function goToSlide(index) {
            currentSlide = index;
            const track = document.getElementById('giftCarouselTrack');
            if (track) {
                track.style.transform = `translateX(-${index * 100}%)`;
            }
            
            // ë„íŠ¸ ì—…ë°ì´íŠ¸
            document.querySelectorAll('.carousel-dot').forEach((dot, i) => {
                dot.classList.toggle('active', i === index);
            });
            
            // ìë™ ìŠ¬ë¼ì´ë“œ ì¬ì‹œì‘
            clearInterval(autoSlideInterval);
            startAutoSlide();
        }
        
        function nextSlide() {
            currentSlide = (currentSlide + 1) % slides;
            goToSlide(currentSlide);
        }
        
        function startAutoSlide() {
            autoSlideInterval = setInterval(nextSlide, 4000);
        }
        
        // ì´ë¯¸ì§€ ëª¨ë‹¬
        function showImageModal(src, caption) {
            document.getElementById('modalImage').src = src;
            document.getElementById('modalCaption').textContent = caption;
            document.getElementById('imageModal').classList.add('show');
        }
    </script>
</body>
</html>