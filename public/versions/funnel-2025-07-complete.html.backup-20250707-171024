    <script>
        
        // ë” ìì„¸íˆ ë³´ê¸° í† ê¸€
        function toggleMoreSpecs() {
            const moreSpecs = document.getElementById('moreSpecs');
            const moreSpecsText = document.getElementById('moreSpecsText');
            
            if (moreSpecs.classList.contains('hidden')) {
                moreSpecs.classList.remove('hidden');
                moreSpecsText.innerHTML = '<i class="fas fa-chevron-up mr-1"></i>ê°„ë‹¨íˆ ë³´ê¸°';
            } else {
                moreSpecs.classList.add('hidden');
                moreSpecsText.innerHTML = '<i class="fas fa-chevron-down mr-1"></i>ë” ìì„¸íˆ ë³´ê¸°';
            }
        }
        
        // í€´ì¦ˆ ë¡œì§
        // í€´ì¦ˆ ë¡œì§
        const quizData = {
            style: '',
            priority: '',
            distance: 0,
            styleText: '',  // í•œê¸€ í‘œì‹œìš©
            priorityText: '',  // í•œê¸€ í‘œì‹œìš©
            recommendedFlex: '',
            recommendedCPM: 0,
            expectedDistance: 0
        };

        // ë¹„ê±°ë¦¬ì— ë”°ë¥¸ í”Œë ‰ìŠ¤ ì¶”ì²œ í•¨ìˆ˜
        function recommendFlexByDistance(distance) {
            // ë¹„ê±°ë¦¬ë¥¼ ê¸°ë°˜ìœ¼ë¡œ ëŒ€ëµì ì¸ ì§„ë™ìˆ˜ë¥¼ ì¶”ì •
            let estimatedCPM;
            let recommendedFlex;
            let cpmRange;
            
            if (distance < 180) {
                estimatedCPM = 202;  // R2
                recommendedFlex = 'R2';
                cpmRange = '202';
            } else if (distance < 200) {
                estimatedCPM = 212;  // R1
                recommendedFlex = 'R1';
                cpmRange = '212';
            } else if (distance < 220) {
                estimatedCPM = 220;  // R
                recommendedFlex = 'R';
                cpmRange = '220';
            } else if (distance < 240) {
                estimatedCPM = 230;  // SR
                recommendedFlex = 'SR';
                cpmRange = '230';
            } else if (distance < 260) {
                estimatedCPM = 240;  // S
                recommendedFlex = 'S';
                cpmRange = '240';
            } else {
                estimatedCPM = 240;  // S (ê°•í•œ)
                recommendedFlex = 'S';
                cpmRange = '240+';
            }
            
            return {
                flex: recommendedFlex,
                cpm: estimatedCPM,
                cpmRange: cpmRange
            };
        }

        
        
