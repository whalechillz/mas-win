        function selectAnswer(step, value) {
            // ì´ì „ ì„ íƒ ì œê±°
            document.querySelectorAll(`#step${step} .quiz-option`).forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // ìƒˆ ì„ íƒ ì¶”ê°€
            const selectedOption = event.target.closest('.quiz-option');
            selectedOption.classList.add('selected');
            
            // ë°ì´í„° ì €ì¥
            if (step === 1) {
                quizData.style = value;
                // í•œê¸€ í…ìŠ¤íŠ¸ ì €ì¥
                const styleTexts = {
                    'stability': 'ì•ˆì •í˜•',
                    'power': 'íŒŒì›Œí˜•',
                    'hybrid': 'ë³µí•©í˜•'
                };
                quizData.styleText = styleTexts[value];
            }
            if (step === 2) {
                quizData.priority = value;
                // í•œê¸€ í…ìŠ¤íŠ¸ ì €ì¥
                const priorityTexts = {
                    'distance': 'ë¹„ê±°ë¦¬',
                    'direction': 'ë°©í–¥ì„±',
                    'comfort': 'í¸ì•ˆí•¨'
                };
                quizData.priorityText = priorityTexts[value];
            }
            
            // ë‹¤ìŒ ë‹¨ê³„ë¡œ
            setTimeout(() => {
                document.getElementById(`step${step}`).classList.remove('active');
                document.getElementById(`step${step + 1}`).classList.add('active');
            }, 500);
        }

        function completeQuiz() {
            const distance = document.getElementById('distanceInput').value;
            if (!distance) {
                alert('ë¹„ê±°ë¦¬ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }
            
            quizData.distance = parseInt(distance);
            
            // ë¹„ê±°ë¦¬ì— ë”°ë¥¸ í”Œë ‰ìŠ¤ ì¶”ì²œ
            const flexRecommendation = recommendFlexByDistance(quizData.distance);
            
            // ì¶”ì²œ ì œí’ˆ ê²°ì •
            const productKey = `${quizData.style}-${quizData.priority}`;
            const product = products[productKey];
            
            // ì œí’ˆì— ì¶”ì²œ í”Œë ‰ìŠ¤ ì •ë³´ ì¶”ê°€
            product.recommendedFlex = flexRecommendation.flex;
            product.recommendedCPM = flexRecommendation.cpm;
            product.cpmRange = flexRecommendation.cpmRange;
            
            // í€´ì¦ˆ ë°ì´í„°ì—ë„ ì €ì¥
            quizData.recommendedFlex = flexRecommendation.flex;
            quizData.recommendedCPM = flexRecommendation.cpm;
            quizData.expectedDistance = quizData.distance + 25;
            
            // ê²°ê³¼ í‘œì‹œ
            const resultHTML = `
    <!-- ì„¼í„° ì •ë ¬ ë ˆì´ì•„ì›ƒ -->
