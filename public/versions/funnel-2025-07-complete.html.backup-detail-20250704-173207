                    <div class="text-gray-400">í‚¥ í¬ì¸íŠ¸:</div>
                    <div class="text-white font-bold">${product.kickPoint || 'Low'}</div>
                </div>
            </div>
            
            <!-- íŠ¹ë³„í•œ ì´ìœ  -->
            <div class="bg-gradient-to-br from-red-900/30 to-black/30 rounded-lg p-4 border border-red-800">
                <p class="text-yellow-300 font-bold mb-2"><i class="fas fa-star mr-2"></i>íŠ¹ë³„í•œ ì´ìœ </p>
                <p class="text-gray-300 text-sm">${product.hookingDesc || '30ë…„ì˜ ê¸°ìˆ ë ¥ê³¼ íŠ¹í—ˆë°›ì€ ê³ ë°˜ë°œ ê¸°ìˆ ì´ ë§Œë‚˜ ë‹¹ì‹ ì˜ ìŠ¤ìœ™ì„ ì™„ì„±í•©ë‹ˆë‹¤.'}</p>
            </div>
        </div>
    </div>
    
    <!-- ë¹„ê±°ë¦¬ ì˜ˆìƒ ë°•ìŠ¤ -->
    <div class="bg-red-900/20 rounded-xl p-6 mt-8 text-center">
        <p class="text-gray-400 mb-2 text-lg">í˜„ì¬ ë¹„ê±°ë¦¬: <span class="text-white font-bold text-2xl">${quizData.distance}m</span></p>
        <p class="text-gray-400 text-lg">ì˜ˆìƒ ë¹„ê±°ë¦¬: <span class="text-red-500 font-bold text-3xl" id="expectedDistance">${quizData.distance}m</span></p>
    </div>
`;
            
            document.getElementById('recommendedProduct').innerHTML = resultHTML;
            
            // CTA ë²„íŠ¼ ìƒì„±
            
            const buttonsHTML = `
                <button onclick="showBookingModal('${product.name}')" class="bg-red-600 text-white px-6 py-3 rounded-full font-bold hover:bg-red-700 transition">
                    <i class="fas fa-calendar-check mr-2"></i>ì‹œíƒ€ ì˜ˆì•½
                </button>
                <a href="tel:080-028-8888" class="bg-gray-800 text-white px-6 py-3 rounded-full font-bold hover:bg-gray-700 transition">
                    <i class="fas fa-phone mr-2"></i>ì „í™” ìƒë‹´
                </a>
                <button onclick="showContactModal()" class="bg-gray-800 text-white px-6 py-3 rounded-full font-bold hover:bg-gray-700 transition">
                    <i class="fas fa-comment mr-2"></i>ë¬¸ì˜í•˜ê¸°
                </button>
            `;
            
            document.getElementById('resultButtons').innerHTML = buttonsHTML;
            document.getElementById('step3').classList.remove('active');
            document.getElementById('result').classList.add('active');
    // ì˜ˆìƒ ë¹„ê±°ë¦¬ ì• ë‹ˆë©”ì´ì…˜
    setTimeout(() => {
        const expectedDistEl = document.getElementById('expectedDistance');
        if (expectedDistEl) {
            const start = quizData.distance;
            const end = quizData.distance + 25;
            let current = start;
            const duration = 2000; // 2ì´ˆ
            const increment = 25 / (duration / 16);
            
            const timer = setInterval(() => {
                current += increment;
                if (current >= end) {
                    current = end;
                    clearInterval(timer);
                }
                expectedDistEl.textContent = Math.floor(current) + 'm';
            }, 16);
        }
    }, 500);
        }

        // ë¹„ê±°ë¦¬ ë¹„êµ ì• ë‹ˆë©”ì´ì…˜
        function showDistanceComparison() {
            const userDistance = parseInt(document.getElementById('userDistance').value);
            if (!userDistance) {
                alert('ë¹„ê±°ë¦¬ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }
            
            const masDistance = userDistance + 25;
            const maxDistance = Math.max(masDistance, 300);
            
            // ë¹„ê±°ë¦¬ í‘œì‹œ
            document.getElementById('normalDistance').textContent = userDistance + 'm';
            document.getElementById('masDistance').textContent = masDistance + 'm';
            
            // ë¹„êµ ì˜ì—­ í‘œì‹œ
            document.getElementById('distanceComparison').classList.remove('hidden');
            
            // ê³¨í”„ê³µ ì• ë‹ˆë©”ì´ì…˜
            setTimeout(() => {
                const normalBall = document.getElementById('normalBall');
                const masBall = document.getElementById('masBall');
                
                normalBall.style.setProperty('--distance', `${(userDistance / maxDistance) * 90}%`);
                masBall.style.setProperty('--distance', `${(masDistance / maxDistance) * 90}%`);
                
                normalBall.classList.add('ball-animate');
                masBall.classList.add('ball-animate');
            }, 100);
        }

        // FAQ í† ê¸€
        function toggleFAQ(id) {
            const content = document.getElementById(`faq-content-${id}`);
            const icon = document.getElementById(`faq-icon-${id}`);
            
            content.classList.toggle('hidden');
            icon.classList.toggle('rotate-180');
        }

        // íŒì—…
        function showPopup() {
            document.getElementById('popup').classList.add('show');
        }

        function hidePopup() {
            document.getElementById('popup').classList.remove('show');
        }

        // ëª¨ë‹¬
        function showBookingModal(clubName = '') {
            document.getElementById('bookingModal').classList.add('show');
            if (clubName) {
                document.querySelector('#bookingForm select[name="club"]').value = clubName;
            }
        }

        function showContactModal() {
            document.getElementById('contactModal').classList.add('show');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('show');
        }

        // í¼ ì œì¶œ ì²˜ë¦¬
        document.getElementById('bookingForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // ë²„íŠ¼ ìƒíƒœ ë³€ê²½
            const submitButton = e.target.querySelector('button[type="submit"]');
            const originalText = submitButton.innerHTML;
            submitButton.innerHTML = '<span class="loading"></span> ì²˜ë¦¬ì¤‘...';
            submitButton.disabled = true;
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                // Supabaseì— ì €ì¥
                if (supabase) {
                    const { error } = await supabase
                        .from('bookings')
                        .insert([{
                            name: data.name,
                            phone: data.phone,
                            date: data.date,
                            time: data.time,
                            club: data.club
                        }]);
                    
                    if (error) throw error;
                    
                    // Slack ì•Œë¦¼ (ì„œë²„ ì‚¬ì´ë“œì—ì„œ ì²˜ë¦¬í•˜ëŠ” ê²ƒì„ ê¶Œì¥)
                    if (typeof SUPABASE_CONFIG !== 'undefined' && SUPABASE_CONFIG.slackWebhook && 
                        SUPABASE_CONFIG.slackWebhook !== 'YOUR_SLACK_WEBHOOK_URL') {
                        try {
                            await fetch(SUPABASE_CONFIG.slackWebhook, {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({
                                    text: `ìƒˆë¡œìš´ ì‹œíƒ€ ì˜ˆì•½!\nì´ë¦„: ${data.name}\nì—°ë½ì²˜: ${data.phone}\në‚ ì§œ: ${data.date}\nì‹œê°„: ${data.time}\ní´ëŸ½: ${data.club}`
                                })
                            });
                        } catch (slackError) {
                            console.error('Slack ì•Œë¦¼ ì‹¤íŒ¨:', slackError);
                        }
                    }
                } else {
                    // Supabaseê°€ ì„¤ì •ë˜ì§€ ì•Šì€ ê²½ìš° ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥
                    const bookings = JSON.parse(localStorage.getItem('bookings') || '[]');
                    bookings.push({
                        ...data,
                        created_at: new Date().toISOString()
                    });
                    localStorage.setItem('bookings', JSON.stringify(bookings));
                    console.log('ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥ë¨:', bookings);
                }
                
                alert('ì˜ˆì•½ì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤. ê³§ ì—°ë½ë“œë¦¬ê² ìŠµë‹ˆë‹¤.');
                closeModal('bookingModal');
                e.target.reset();
            } catch (error) {
                console.error('Error:', error);
                alert('ì˜ˆì•½ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ì „í™”ë¡œ ë¬¸ì˜í•´ì£¼ì„¸ìš”.');
            } finally {
                // ë²„íŠ¼ ì›ìƒ ë³µêµ¬
                submitButton.innerHTML = originalText;
                submitButton.disabled = false;
            }
        });

        document.getElementById('contactForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // ë²„íŠ¼ ìƒíƒœ ë³€ê²½
            const submitButton = e.target.querySelector('button[type="submit"]');
            const originalText = submitButton.innerHTML;
            submitButton.innerHTML = '<span class="loading"></span> ì²˜ë¦¬ì¤‘...';
            submitButton.disabled = true;
            
            const formData = new FormData(e.target);
            const callTimes = formData.getAll('callTime');
            
            const data = {
                name: formData.get('name'),
                phone: formData.get('phone'),
                call_times: callTimes.join(', ')
            };
            
            try {
                // Supabaseì— ì €ì¥
                if (supabase) {
                    const { error } = await supabase
                        .from('contacts')
                        .insert([data]);
                    
                    if (error) throw error;
                    
                    // Slack ì•Œë¦¼
                    if (typeof SUPABASE_CONFIG !== 'undefined' && SUPABASE_CONFIG.slackWebhook &&
                        SUPABASE_CONFIG.slackWebhook !== 'YOUR_SLACK_WEBHOOK_URL') {
                        try {
                            await fetch(SUPABASE_CONFIG.slackWebhook, {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({
                                    text: `ìƒˆë¡œìš´ ë¬¸ì˜!\nì´ë¦„: ${data.name}\nì—°ë½ì²˜: ${data.phone}\ní†µí™”ê°€ëŠ¥ì‹œê°„: ${data.call_times}`
                                })
                            });
                        } catch (slackError) {
                            console.error('Slack ì•Œë¦¼ ì‹¤íŒ¨:', slackError);
                        }
                    }
                } else {
                    // Supabaseê°€ ì„¤ì •ë˜ì§€ ì•Šì€ ê²½ìš° ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥
                    const contacts = JSON.parse(localStorage.getItem('contacts') || '[]');
                    contacts.push({
                        ...data,
                        created_at: new Date().toISOString()
                    });
                    localStorage.setItem('contacts', JSON.stringify(contacts));
                    console.log('ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥ë¨:', contacts);
                }
                
                alert('ë¬¸ì˜ê°€ ì ‘ìˆ˜ë˜ì—ˆìŠµë‹ˆë‹¤. ì„ íƒí•˜ì‹  ì‹œê°„ëŒ€ì— ì—°ë½ë“œë¦¬ê² ìŠµë‹ˆë‹¤.');
                closeModal('contactModal');
                e.target.reset();
            } catch (error) {
                console.error('Error:', error);
                alert('ë¬¸ì˜ ì ‘ìˆ˜ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ì „í™”ë¡œ ë¬¸ì˜í•´ì£¼ì„¸ìš”.');
            } finally {
                // ë²„íŠ¼ ì›ìƒ ë³µêµ¬
                submitButton.innerHTML = originalText;
                submitButton.disabled = false;
            }
        });

        // ìŠ¤í¬ë¡¤ ì• ë‹ˆë©”ì´ì…˜
        document.addEventListener('DOMContentLoaded', function() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                    }
                });
            }, { threshold: 0.1 });
            
            const scrollElements = document.querySelectorAll('.scroll-reveal');
            scrollElements.forEach(element => {
                observer.observe(element);
            });

            // 3ì´ˆ í›„ íŒì—… ìë™ í‘œì‹œ
            setTimeout(showPopup, 3000);
        });
    </script>
</body>
</html>